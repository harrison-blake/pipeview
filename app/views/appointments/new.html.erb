<div class="w-full max-w-2xl mx-auto bg-white shadow-xl rounded-2xl p-10 mt-10 space-y-6">
  <h1 class="text-3xl font-bold text-emerald-800 text-center">Schedule an Inspection</h1>

  <%= form_with model: @appointment, local: true do |f| %>
    <% if @appointment.errors.any? %>
      <div class="bg-red-100 text-red-700 p-4 rounded-md">
        <p><strong>There were problems with your submission:</strong></p>
        <ul class="list-disc list-inside">
          <% @appointment.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :name, "Your Name", class: "block font-medium text-gray-700" %>
      <%= f.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-emerald-500 focus:border-emerald-500" %>
    </div>

    <div>
      <%= f.label :email, "Email Address", class: "block font-medium text-gray-700" %>
      <%= f.email_field :email, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-emerald-500 focus:border-emerald-500" %>
    </div>

    <div>
      <%= f.label :phone, "Phone Number", class: "block font-medium text-gray-700" %>
      <%= f.telephone_field :phone, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-emerald-500 focus:border-emerald-500" %>
    </div>

    <div>
      <%= f.label :preferred_time, "Preferred Date & Time", class: "block font-medium text-gray-700" %>
      <%= f.datetime_local_field :preferred_time, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-emerald-500 focus:border-emerald-500" %>
    </div>

    <div class="text-center">
      <%= f.submit "Submit Request", class: "mt-6 inline-block bg-emerald-700 hover:bg-emerald-800 text-white font-semibold px-6 py-3 rounded-lg shadow transition" %>
    </div>
  <% end %>
</div>
