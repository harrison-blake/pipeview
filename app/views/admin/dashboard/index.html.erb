<h1 class="text-2xl font-bold mb-6">Admin Dashboard</h1>

<table class="min-w-full bg-white rounded shadow overflow-hidden">
  <thead class="bg-emerald-700 text-white">
    <tr>
      <th class="text-left px-4 py-2">Name</th>
      <th class="text-left px-4 py-2">Email</th>
      <th class="text-left px-4 py-2">Phone</th>
      <th class="text-left px-4 py-2">Preferred Time</th>
      <th class="text-left px-4 py-2">Notes</th>
    </tr>
  </thead>
  <tbody class="text-gray-800">
    <% @appointments.each do |appointment| %>
      <tr class="border-b">
        <td class="px-4 py-2"><%= appointment.name %></td>
        <td class="px-4 py-2"><%= appointment.email %></td>
        <td class="px-4 py-2"><%= appointment.phone %></td>
        <td class="px-4 py-2"><%= appointment.preferred_time.in_time_zone("Eastern Time (US & Canada)").strftime("%a, %b %-d at %-l:%M %p") %></td>
        <td class="whitespace-pre-line"><%= appointment.notes.presence|| "—" %>
        </td>
        <td class="px-4 py-2">
            <%= link_to "✕", appointment_path(appointment.id),
              method: :delete,
              data: { confirm: "Delete this appointment?" },
              class: "text-red-500 hover:text-red-700 font-semibold"
            %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
