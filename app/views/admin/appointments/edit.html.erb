<div class="max-w-2xl mx-auto text-white p-8 space-y-6">
  <h1 class="text-2xl font-bold mb-6 border-b border-white pb-2">Edit Appointment</h1>

  <%= form_with model: @appointment, url: admin_appointment_path(@appointment), local: true do |f| %>
    <div class="space-y-6">

      <div>
        <%= f.label :name, "Name", class: "block text-sm font-semibold mb-1" %>
        <%= f.text_field :name, class: "w-full bg-transparent border border-white/30 rounded px-3 py-2 text-white placeholder-gray-400" %>
      </div>

      <div>
        <%= f.label :email, "Email", class: "block text-sm font-semibold mb-1" %>
        <%= f.email_field :email, class: "w-full bg-transparent border border-white/30 rounded px-3 py-2 text-white placeholder-gray-400" %>
      </div>

      <div>
        <%= f.label :phone, "Phone", class: "block text-sm font-semibold mb-1" %>
        <%= f.telephone_field :phone, class: "w-full bg-transparent border border-white/30 rounded px-3 py-2 text-white placeholder-gray-400" %>
      </div>

      <div>
        <%= f.label :preferred_time, "Preferred Time", class: "block text-sm font-semibold mb-1" %>
        <%= f.datetime_select :preferred_time, class: "w-full bg-transparent border border-white/30 rounded px-3 py-2 text-white" %>
      </div>

      <div>
        <%= f.label :notes, "Notes", class: "block text-sm font-semibold mb-1" %>
        <%= f.text_area :notes, rows: 4, class: "w-full bg-transparent border border-white/30 rounded px-3 py-2 text-white placeholder-gray-400" %>
      </div>
    </div>

    <div class="flex space-x-4 mt-6">
      <%= f.submit "Update Appointment", class: "bg-emerald-600 text-white px-4 py-2 rounded hover:bg-emerald-700" %>
      <%= link_to "Cancel", admin_appointment_path(@appointment), class: "text-gray-300 hover:underline" %>
    </div>
  <% end %>
</div>
