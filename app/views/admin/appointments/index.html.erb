<div class="max-w-6xl mx-auto bg-[#0b1a34] text-white p-8 rounded-xl shadow">
  <h1 class="text-2xl font-bold border-b border-white pb-2 mb-6">All Appointments</h1>

  <table class="min-w-full w-full table-auto text-left border-separate border-spacing-y-2">
    <thead>
      <tr class="text-white uppercase text-sm tracking-wide">
        <th class="px-4 py-2">Name</th>
        <th class="px-4 py-2">Email</th>
        <th class="px-4 py-2">Phone</th>
        <th class="px-4 py-2">Preferred Time</th>
        <th class="px-4 py-2">Notes</th>
        <th class="px-4 py-2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @appointments.each do |appointment| %>
        <tr class="bg-[#13294b] text-white rounded-lg">
          <td class="px-4 py-2"><%= appointment.name %></td>
          <td class="px-4 py-2"><%= appointment.email %></td>
          <td class="px-4 py-2"><%= appointment.phone %></td>
          <td class="px-4 py-2">
            <%= appointment.preferred_time.in_time_zone("Eastern Time (US & Canada)").strftime("%A, %B %-d at %-l:%M %p") %>
          </td>
          <td class="px-4 py-2 whitespace-pre-line"><%= appointment.notes.presence || "â€”" %></td>
          <td class="px-4 py-2 space-x-2">
            <%= link_to "View", admin_appointment_path(appointment), class: "text-emerald-200 hover:underline" %>
            <%= link_to "Edit", edit_admin_appointment_path(appointment), class: "text-red-200 hover:underline" %>
            <%= link_to "Delete", admin_appointment_path(appointment),
                method: :delete,
                data: { confirm: "Are you sure?" },
                class: "text-red-400 hover:underline" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
